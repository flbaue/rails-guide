<div class="page-header">
<h1>Write an amazing Article!</h1>
</div>
<%= form_for :article, url: articles_path do |f| %>
<p><%= f.label :title %><br><%= f.text_field :title, class: "form-control" %></p>
<p><%= f.label :text %><br><%= f.text_area :text, class: "form-control" %></p>
<p><%= f.submit "Go", class: "btn btn-default" %></p>
<% end %>
