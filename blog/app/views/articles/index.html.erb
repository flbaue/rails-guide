<div class="page-header">
<h1>Articles</h1>
</div>
<table class="table table-striped">
  <tr>
    <th>Id</th>
    <th>Title</th>
    <th>Text</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.id, article_path(article) %></td>
      <td><%= article.title %></td>
      <td><%= article.text %></td>
    </tr>
  <% end %>
</table>


<%= link_to 'New article', new_article_path, :class => "btn btn-primary" %>
